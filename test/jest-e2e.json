{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/test/dotenv-config.ts"],
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  }
}
